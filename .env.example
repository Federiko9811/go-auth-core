APP_PORT=8080
ENV=development

# --- DATABASE ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=go_auth_db
DB_SSLMODE=disable

# --- REDIS ---
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=

# --- TOKEN CONFIG ---
# Secret MUST be changed in production!
JWT_SECRET=change-me-secret-key-must-be-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- WEBAUTHN ---
# The human-readable name of your app
RP_DISPLAY_NAME="My Go App"
# The domain of your app (no protocol, no port). Use 'localhost' for dev.
RP_ID="localhost"
# Full origins allowed to access WebAuthn (comma separated)
RP_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
COOKIE_DOMAIN=frontend_domain

# --- RATE LIMITING ---
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# --- CORS ---
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- LOGGING ---
LOG_LEVEL=info
LOG_FORMAT=console

# --- Mail ---
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourdomain.com